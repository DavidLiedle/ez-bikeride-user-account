{% extends "pagelayout.html.twig" %}

{% block page_head %}
    {% set title = "Registration complete"|trans %}

    {{ parent() }}
{% endblock %}

{% block content %}
    <section class="user-form-confirmation col-md-4 col-md-offset-4">
        <h2>{{ 'Registration completed'|trans }}</h2>

        <div class="row confirmation-label">
            {{ 'Your account has been created and is ready for use.'|trans }}
        </div>

        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <button type="button"
                        class="btn btn-block btn-primary"
                        onclick="window.location='{{
                          path('login')
                        }}';">{{
                          'Log in'|trans
                        }}</button>
            </div>
        </div>
    </section>
{% endblock %}
